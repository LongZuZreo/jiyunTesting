<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="70dp"
    android:background="@color/colorWhite"
    >
    <ImageView
        android:id="@+id/test_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/test_logo"/>
    <q.rorbin.verticaltablayout.VerticalTabLayout
        android:layout_below="@id/test_image"
        android:id="@+id/test_tab_layout"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        >
    </q.rorbin.verticaltablayout.VerticalTabLayout>
    <LinearLayout
        android:layout_toRightOf="@id/test_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="200dp"
        android:paddingTop="120dp"
        >
        <TextView
            android:id="@+id/my_test_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"/>
        <RadioGroup
            android:id="@+id/my_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:weightSum="4">
            <RadioButton
                android:id="@+id/radio_A"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:button="@null"
                android:textSize="20sp"
                android:drawableLeft="@drawable/option_radio_selector"/>
            <RadioButton
                android:id="@+id/radio_B"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:button="@null"
                android:textSize="20sp"
                android:drawableLeft="@drawable/option_radio_selector"/>
            <RadioButton
                android:id="@+id/radio_C"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:button="@null"
                android:textSize="20sp"
                android:drawableLeft="@drawable/option_radio_selector"/>
            <RadioButton
                android:id="@+id/radio_D"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:button="@null"
                android:textSize="20sp"
                android:drawableLeft="@drawable/option_radio_selector"/>
        </RadioGroup>
        <Button
            android:id="@+id/the_next_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:layout_marginTop="20dp"
            android:text="下一题"
            android:layout_marginLeft="200dp"
            android:textColor="@color/colorWhite"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/my_chrometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="30:00"
        android:textColor="#FFFFFF"
        android:background="@drawable/chrometer_shap"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/complete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交卷"
        android:background="@drawable/login_btn_shape"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="#FFFFFF"
        />
</RelativeLayout>